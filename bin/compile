#!/usr/bin/env bash

header() {
  echo "" || true
  echo "-----> $*" || true
}

output() {
  while IFS= read -r LINE; do
    # do not indent headers that are being piped through the output
    if [[ "$LINE" =~ ^-----\>.* ]]; then
      echo "$LINE" || true
    else
      echo "       $LINE" || true
    fi
  done
}

header "BUILD_DIR"
echo "$1" | output

header "CACHE_DIR"
echo "$2" | output

header "cwd"
pwd | output

header "PATH"
echo $PATH | output

header "which sass"
which sass | output
